<webscript>
  <shortname>List Workflow Tasks</shortname>
  <description>
  Lists all Workflow Task Instances associated with an authority and of a given State.
  The list of returned tasks also includes pooled tasks which the specified authority is eligible to claim.  
  </description>
  <url>/process/status-list</url>
  <url>/process/status-list?authority={authority?}</url>
  <url>/process/status-list?status={state?}</url>
  <url>/process/status-list?properties={properties?}</url>
  <url>/process/status-list?authority={authority?}&amp;?status={state?}</url>
  <url>/process/status-list?authority={authority?}&amp;?properties={properties?}</url>
  <url>/process/status-list?status={state?}&amp;?properties={properties?}</url>
  <url>/process/status-list?authority={authority?}&amp;?status={state?}&amp;?properties={properties?}</url>

  <url>/process/status-list.xml</url>
  <url>/process/status-list.xml?authority={authority?}</url>
  <url>/process/status-list.xml?status={state?}</url>
  <url>/process/status-list.xml?properties={properties?}</url>
  <url>/process/status-list.xml?authority={authority?}&amp;?status={state?}</url> 
  <url>/process/status-list.xml?authority={authority?}&amp;?properties={properties?}</url>
  <url>/process/status-list.xml?status={state?}&amp;?properties={properties?}</url>
  <url>/process/status-list.xml?authority={authority?}&amp;?status={state?}&amp;?properties={properties?}</url>
  <format default="json"/>
  <authentication>user</authentication>
  <transaction >none</transaction>
</webscript>
